<header>
    <!-- <div id="header_top">
        <p>OFERTAS</p>
    </div> -->
    <div id="header_bottom">
        <figure class="imagen_header">
            <a href="/">
                <img class="logo_alley_oop" src="/images/alley-oop-logo.png" alt="" width="120px">
            </a>
        </figure>
        <section id="menu_header" class="hidden_burguer none">
            <a href="/">Home</a>
            <a href="/tienda">Tienda</a>
            <a href="/contacto">Contacto</a>
        </section>
        <section id="icon_header">
            <% if (locals.isLogged) { %>
                <div id="a_img_log">
                    <img src="/uploads/users/<%= locals.userLogged.image %> " alt="" height="32px" width="32px" id="image_perfil">
                    <p class="bienvenida_logged"> Bienvenido <%= locals.userLogged.first_name %> </p>
                </div>
                <div class="dropdown hidden none">
                    <a href="/user/profile">Profile</a>
                    <% if (locals.isLogged) { %>
                        <a href="/misCompras">Mis compras</a>
                    <% } %> 
                    <% if (locals.userLogged && locals.userLogged.admin) { %>
                        <a href="/admin/admin">Administrar</a>
                        <a href="http://localhost:3000/">Dashboard</a>
                    <% } %> 
                    <a href="/user/logout">Logout</a>
                </div>
            <% } else { %>
                <a class="icon_a" href="/user/login"><i class="fas fa-user"></i></a>
            <% } %>
            <div class="burger-menu">
                <i class="fas fa-bars"></i>
            </div>
        </section>
    </div>
    <script src="/js/dropdown.js"></script>
</header>