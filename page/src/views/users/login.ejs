<!DOCTYPE html>
<html lang="en">
    <%- include ("../includes/head") %>
<body>
    <%- include ("../includes/header") %>
    <main>
        <section id="section_login">
            <div class="login">
                <img src="/images/alley-oop-logo_fondoBlanco.png" alt="" width="300px">
                <p class="title_login">Ingresar:</p>
                <div class="a_login_register">
                    <a class="menu_user border active" href="/user/login"> LOG-IN</a>
                    <a class="menu_user" href="/user/register"> REGISTRATE</a>
                </div>
                <form action="/user/access" method="post" class="form_login">
                    <input type="text" name="email" id="email" placeholder="Escribi tu correo electronico">
                    <% if (locals.errors && errors.email) { %>
                        <p class="error_login">
                          <%= errors.email.msg %> 
                        </p>
                      <% } %>
                    <input type="password" name="password" id="password" placeholder="Escribi tu contaseÃ±a">
                    <% if (locals.errors && errors.password) { %>
                        <p class="error_login">
                          <%= errors.password.msg %> 
                        </p>
                      <% } %>
                      <label for="rememeber_user" class="label_recordar">
                        <input type="checkbox" name="rememeber_user" class="check_remember">
                        <p> Recordar mi usuario</p> 
                      </label>
                    <button class="button_login" type="submit"> Ingresar</button>
                    <p class="login_href">No tenes cuenta, <a href="/user/register">REGISTRATE</a></p>
                </form>
            </div>
        </section>
    </main>
</body>
</html>