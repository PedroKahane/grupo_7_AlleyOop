<!DOCTYPE html>
<html lang="en">
<%- include ("includes/head") %>
<body>
    <%- include ("includes/header") %>
    <main id="main_home">
        <section class="background_home">
            <div class="p_home">
                <p class="title_background"> Heroes come and go,<br>
                    but legends are forever
                </p>
                <p class="subtitle_background"> Kobe Bryant</p>
            </div>
        </section>
        <section id="productos_home">
            <p class="titulo_productos">Productos destacados:</p>
            <div id="articulos_promocion">
                <% products.forEach(product => { %>
                        <a href="/productDetail/<%= product.id %> ">
                            <article class="articulo_destacado">
                                <figure>
                                    <img class="imagen_promocion" src="/uploads/<%= product.imagen_frente %>" alt="">
                                </figure>
                                <div class="precio_descuento">
                                    <p class="precio">$<%= product.precio %></p>
                                    <% if (product.descuento > 0) { %>
                                        <p class="descuento"><%= product.descuento %>  % OFF</p>
                                    <% } %>
                                </div>
                                <p class="descripcion">Camiseta <%= product.equipo %></p>
                                <p class="jugador"><%= product.jugador %> (<%= product.numero_camiseta %>)</p>
                            </article>
                        </a>
                <% }) %>
            </div>
            <div id="contenedor_boton">
                <a class="boton_productos" href="/tienda">IR A LA TIENDA</a>
            </div>
        </section>
        <section id="banner_beneficios">
            <div class="beneficio">
                <i class="fas fa-truck"></i>
                <p class="title_beneficio">ENVIO GRATIS</p>
                <p class="subtitle_beneficio">A partir de $7000</p>
            </div>
            <div class="beneficio">
                <i class="fas fa-shield-alt"></i>
                <p class="title_beneficio">SEGURIDAD</p>
                <p class="subtitle_beneficio">30 dias de devolucion si no estas conforme</p>
            </div>
            <div class="beneficio">
                <i class="fas fa-credit-card"></i>
                <p class="title_beneficio">Tarjeta</p>
                <p class="subtitle_beneficio">El pago se hace a tarves de tarjeta de credito o de debito</p>
            </div>
        </section>
    </main>
    <%- include ("includes/footer") %>
</body>
</html>