<!DOCTYPE html>
<html lang="en">
    <%- include ("../includes/head") %>
<body>
    <%- include ("../includes/header") %>
<main id="main_tienda">
        <p id="title_admin">ADMINISTRAR PRODUCTOS:</p>
        <div id="articulos_promocion">
            <% products.forEach(product => { %>
                <article class="articulo_destacado">
                    <figure>
                        <img class="imagen_promocion" src="/uploads/<%= product.imagen_frente %>" alt="">
                    </figure>
                    <div class="precio_descuento">
                        <p class="precio">$<%= product.precio %> </p>
                        <% if (product.descuento > 0) { %>
                            <p class="descuento"><%= product.descuento %>  % OFF</p>
                        <% } %>
                    </div>
                    <p class="descripcion">Camiseta <%= product.equipo %>  </p>
                    <p class="jugador"><%= product.jugador %> (<%= product.numero_camiseta %>)</p>
                    <div class="boton_articulo">
                        <a href="/edit/<%= product.id %>" class="buton_edit celular"> <i class="fas fa-pencil-alt"></i></a>
                        <form action="/delete/<%= product.id %>?_method=DELETE" method="post" class="buton_delete celular">
                            <input type="hidden" name="id" value="<%= product.id %>">
                            <button type="submit" class="button_eliminar"><i class="fas fa-trash-alt"></i></button>
                        </form>
                    </div>
                </article>        
            <% }) %>
            <article class="articulo_destacado sumar">
                <p id="p_creacion">Crear un nuevo producto</p>
                <a href="/create">
                    <div class="background_plus">
                        <i class="fas fa-plus"></i>
                    </div>
                </a>
            </article>     
        </div>
    </main>
    <%- include ("../includes/footer") %>
</body>
</html>


