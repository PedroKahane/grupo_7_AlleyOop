<!DOCTYPE html>
<html lang="en">
    <%- include ("../includes/head") %>
<body>
    <%- include ("../includes/header") %>
    <main id="main_tienda">
        <p id="title_admin">ADMINISTRAR PRODUCTOS:</p>
        <div class="a_menu_ventas">
            <a class="menu_user active_process" href="/admin/ventas"> <p>EN PROCESO </p><i class="fas fa-truck"></i></a>
            <a class="menu_user finish" href="/admin/ventasFinalizadas"> <p>FINALIZADOS </p><i class="fas fa-check"></i></a>
            <a class="menu_user cancel" href="/admin/ventasCanceladas"> <p> CANCELADOS </p><i class="fas fa-times"></i></a>
        </div>
        <div id="articulos_promocion">
            <% compras.forEach(compra => { %>
                <% if (compra.estadoProducto == "Confirmado" || compra.estadoProducto == "En proceso de envio") { %>
                <article class="articulo_destacado">
                    <figure id="figure_ventas">
                        <img class="imagen_promocion" src="/uploads/<%= compra.productoId.imagenFrente %>" alt="">
                    </figure>
                    <div id="contenedor_descripciones">
                        <p class="descripcion"><span>Camiseta: </span> <%= compra.productoId.jugador %></p>
                        <p class="descripcion"><span>Equipo: </span><%= compra.productoId.equipos.equipo %> </p>
                        <p class="descripcion"><span>Cant. de camisetas: </span> <%= compra.cantidad %> </p>
                        <p class="descripcion"><span>Venta total: </span> $<%= compra.PrecioTotal %> </p>
                        <p class="descripcion"><span>Cliente: </span> <%= compra.nombre %> <%= compra.apellido %> </p>
                        <p class="descripcion"><span>Forma de pago: </span> <%= compra.metododepago %></p>
                        <p class="descripcion"><span>Direccion: </span> <%= compra.direccion %></p>
                        <p class="descripcion"><span>Localidad: </span> <%= compra.localidad %></p>
                        <p class="descripcion"><span>Codigo postal: </span> <%= compra.codigopostal %></p>
                        <p class="descripcion"><span>Estado: </span> <%= compra.estadoProducto %></p>
                        
                    </div>
                    <div class="flex_column">
                        <form action="/admin/cambiarStatus/<%= compra.id %>?_method=PUT" method="POST" class="flex_column">
                            <select name="estadoProducto" id="select">
                                <% if (compra.estadoProducto == "Confirmado") { %>
                                    <option value="Confirmado" selected>Confirmado</option>
                                    <option value="En proceso de envio">En proceso de envio</option>
                                <% } else if(compra.estadoProducto == "En proceso de envio") { %>
                                    <option value="Confirmado">Confirmado</option>
                                    <option value="En proceso de envio" selected>En proceso de envio</option>
                                <% } %>
                                <option value="Cancelado">Cancelado</option>
                                <option value="Finalizado">Finalizado</option>
                            </select>
                            <button type="submit" id="enviar_estado">Enviar</button>
                        </form>
                    </div>
                </article>
                <% } %>  
            <% }) %>
        </div>
    </main>
    <%- include ("../includes/footer") %>
</body>
</html>
